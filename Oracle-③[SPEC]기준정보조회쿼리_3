-- 1. SDC 스펙 그룹 기본 정보

-- SECTION_CODE : P( PRODUCT - GLS or PNL ) / LOT
SELECT *
  FROM TB_EDC_SDC2_SPEC_GR G
 WHERE G.FACILITY_CODE = 'P9T'
   AND G.SPECIFICATION_GROUP_ID = 'PXL_GK_발생개수_ALL'
;

-- 2. SDC 스펙 그룹의 분자로 추출할 불량코드 정보
SELECT *
  FROM TB_EDC_SDC2_DEF_COND G
 WHERE G.FACILITY_CODE = 'P9T'
   AND G.SPECIFICATION_GROUP_ID = 'PXL_GK_발생개수_ALL'
;

-- 3. SDC 스펙 그룹의 분자/분모로 추출할 판정값 정보

-- NUMERATOR_FLAG : Y (분자),  N ( 분모 )
SELECT *
  FROM TB_EDC_SDC2_JUDGE_COND G
 WHERE G.FACILITY_CODE = 'P9T'
   AND G.SPECIFICATION_GROUP_ID = 'PXL_GK_발생개수_ALL'
;

-- 5. SDC 스펙 그룹 P/N별 임계치 설정
SELECT *
  FROM TB_EDC_SDC2_SPEC G
 WHERE G.FACILITY_CODE = 'P9T'
   AND G.SPECIFICATION_GROUP_ID = 'PXL_GK_발생개수_ALL'
   AND G.SPEC_SEQ_NO = 201505151319087
;

/* 검사설비 조회 쿼리 */
select * from TB_EDC_SDC2_INSP_PROC_GROUP_N a
 where a.facility_code = 'P9T'
   and a.inspection_process_group_id = 'S3'
;

