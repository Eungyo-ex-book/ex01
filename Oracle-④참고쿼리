/*Defect File 경로정보 쿼리*/
SELECT A.INSPECTION_DATA_ID, A.INSPECTION_DATA_VALUE, A.TABLE_NAME, A.COLUMN_NAME
  FROM TB_EDC_DEF_INSP_DATA A
 WHERE A.DEFECT_FILE_SPEC_TYPE_CODE = 'P9_T'
   AND A.DEFECT_FILE_SECTION_ID IN('DEFECT')
   AND A.COLUMN_NAME IS NOT NULL
   AND A.TABLE_NAME  IS NOT NULL
   AND A.TABLE_NAME = 'TB_EDC_DEF_TFT_DEF'
/*ORDER BY A.INSPECTION_DATA_VALUE DESC*/
;


/*PK 컬럼 확인*/
SELECT A.UNIQUENESS, B.* FROM ALL_INDEXES A, ALL_IND_COLUMNS B WHERE A.INDEX_NAME = B.INDEX_NAME AND A.TABLE_NAME='TB_EDC_DEF_TFT_DEF_DETAIL'
;


/* 컬럼 타입 및 null 허용여부 확인 */
SELECT * 
FROM ALL_TAB_COLUMNS A
WHERE A.TABLE_NAME = 'TB_EDC_DEF_TFT_GLS'
/*AND A.COLUMN_NAME LIKE '%LATEST_REASON_SEQ_NO%'*/
;


/*테이블 컬럼 상세내용*/
      /*데이터 타입정보*/
SELECT DISTINCT A.COLUMN_NAME, A.DATA_TYPE
FROM ALL_TAB_COLUMNS A
WHERE A.TABLE_NAME = 'TB_EDC_DEF_TFT_PNL'
ORDER BY a.COLUMN_NAME asc
/*AND A.COLUMN_NAME LIKE '%LATEST_REASON_SEQ_NO%'*/
;


/*COLUMN_COMMENT*/
SELECT *
FROM ALL_COL_COMMENTS A
WHERE TABLE_NAME = 'TB_EDC_LOT_H'
;


/*파티션 테이블 생성 확인*/
select * from dba_tab_partitions where table_name = 'TB_EDC_DEF_TFT_DEF_IMG'
;
