SELECT *

FROM TB_EDC_SDC2_SPEC S

, TB_EDC_SDC2_SPEC_GR G

WHERE S.FACILITY_CODE = ‘P9T’

AND S.PART_NO_NAME = :part_no_name ( 검사모델 )

AND S.INSPECTION_PROCESS_CODE = :insp_process_code ( 검사공정 )

AND S.INSPECTION_EQUIPMENT_GROUP_ID = :insp_eqp_group_id (검사설비군)

AND G.FACILITY_CODE = S.FACILITY_CODE

AND G.SPECIFICATION_GROUP_ID = S.SPECIFICATION_GROUP_ID 
;


SELECT g.specification_group_id, g.section_code, g.section_length, g.numerator_calc_method_code, g.denominator_calc_method_code

FROM TB_EDC_SDC2_SPEC S

, TB_EDC_SDC2_SPEC_GR G

WHERE S.FACILITY_CODE = 'P9T'

AND S.PART_NO_NAME = '097고해상도'

--AND S.INSPECTION_PROCESS_CODE = :insp_process_code ( 검사공정 )

--AND S.INSPECTION_EQUIPMENT_GROUP_ID = :insp_eqp_group_id (검사설비군)

 AND G.FACILITY_CODE = S.FACILITY_CODE

 AND G.SPECIFICATION_GROUP_ID = S.SPECIFICATION_GROUP_ID 
 
 AND G.SECTION_CODE = 'P'
;
